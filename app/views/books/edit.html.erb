<% if @book.errors.any? %>
  <div class="message">
    <%= @book.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title %> 
  </div>
  <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
  </div>
  <%= f.submit "Update Book" %>
<% end %>