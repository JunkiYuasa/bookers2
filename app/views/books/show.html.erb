<div class="message"><%= flash[:notice] %></div>

<div class="container px-5">
  <div class="row px-3 py-4">
    <div class="col-md-3">
      <%= render "users/info", user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-1">
      <h1>Book detail</h1>
      <table class="p-2">
        <tr>
          <td class="pr-5">
          <%= image_tag @book.user.get_profile_image(100,100) %><br>
          <%= @book.user.name %>
          </td>
          <td class="pr-4"><%= @book.title %></td>
          <td class="pr-3"><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td class="pr-3"><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
            <td class="pr-3"><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>