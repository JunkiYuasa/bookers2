<h1>New Book</h1>

<%= form_with model: @book, url: books_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :opinion %>
  </div>
  <%= f.submit "Create Book" %>
<% end %>



<h1>Books</h1>

<% @books.each do |book| %>
  <p>
    <%= link_to book.title, book_path(book.id) %>
    <%= book.opinion %>
  </p>  
<% end %>

<table>
  <tr>
    <th>UserImage</th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.user.name %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.opinion %></td>
    </tr>
  <% end %>
</table>