<h1>User info</h1>
<%= image_tag user.get_profile_image(100,100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
</table>
<% if user.id == current_user.id %>
  <%= link_to "えでぃっと", edit_user_path(user) %>
<% end %>

<h1>New Book</h1>

<%= form_with model: book, url: books_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
  </div>
  <%= f.submit "Create Book" %>
<% end %>
