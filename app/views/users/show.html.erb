<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
</table>
<% if @user.id == current_user.id %>
  <%= link_to "えでぃっと", edit_user_path(@user) %>
<% end %>


<h1>Books</h1>

<table>
  <tr>
    <th>UserImage</th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @user.books.each do |book| %>
    <tr>
      <td><%= book.user.name %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.opinion %></td>
    </tr>
  <% end %>
</table>